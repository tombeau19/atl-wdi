<h1>Edit {{todont.description}}</h1>

<div class="row">
  <form action="/todonts/{{todont.id}}?_method=PUT" method="POST" class="col-md-6 col-md-offset-3">
    <div class="form-group">
      <label for="description">description:</label>
      <input type="text" name="description" class="form-control" value="{{todont.description}}">
    </div>
    <div class="form-group">
      <label for="urgent">urgent:</label>
      <input type="text" name="urgent" class="form-control" value="{{todont.urgent}}" />
    </div>
    <div>
      <input type="submit" value="Update Todont" class="btn btn-default">
    </div>
  </form>
</div>