<h1>PIRATES!</h1>

<h4>There are {{numTotal}} Pirates</h4>

<ul>
    {{#each pirates}}
    <li>
        <a href="/pirates/{{@index}}">
            <h3>{{this.name}}</h3>
        </a>
    </li>
    <form action="/pirates/{{@index}}/edit">
        <input type="submit" value="Edit">
    </form>
    <form action="/pirates/{{@index}}?_method=DELETE" method="POST">
        <input type="submit" value="Delete">
    </form>
    <hr>
    {{/each}}
</ul>

<h3><a href="/pirates/new">New Pirate</a></h3>