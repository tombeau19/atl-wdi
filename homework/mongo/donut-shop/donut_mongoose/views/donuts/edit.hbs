<main>

	<h2>EDIT THIS DONUT!</h2>
	<div>
		<h3><a href="/">Return to Home Page</a></h3>
	</div>
	<div id="edit-form" class="donut-container-show">


		<form action="/{{donut._id}}?_method=PUT" method="POST">
			<div>
				<label for="name">Name</label>
				<input type="text" name="name" value="{{donut.name}}">
			</div>
			<div>
				<label for="description">Description</label>
				<input type="text" name="description" value="{{donut.description}}">
			</div>
			<div>
				<label for="price">Price</label>
				<input type="text" name="price" value="{{donut.price}}">
			</div>
			<div>
				<label for="qty">Quantity</label>
				<input type="text" name="qty" value="{{donut.qty}}">
			</div>
			<div>
				<label for="img">Image Url</label>
				<input type="text" name="img" value="{{donut.img}}">
			</div>

			<div>
				<button type="submit">Update</button>
			</div>
		</form>


		<div id="img-preview">
			<img src="{{donut.img}}">
		</div>

	</div>
</main>