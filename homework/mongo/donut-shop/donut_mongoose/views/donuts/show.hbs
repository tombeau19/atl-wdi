<main>

	<h2>You are viewing: {{donut.name}}

	</h2>
	<div>
		<h3> <a href="/">Return to Home Page</a></h3>
	</div>
	<div class="donut-container-show">
		<h2 id="donut-name">

			{{donut.name}}

		</h2>

		<img src="{{donut.img}}" alt="">

		<br>
		<h3>Description:</h3>
		<p>

			{{donut.description}}

		</p><br>
		<h3>Price:</h3>
		<p id="cost">$ {{donut.price}} each</p><br>

		<h3 id="quantity">

			{{donut.qty}} remaining

		</h3>

		<br>
		<div>
			<a href="/{{donut._id}}/edit">Edit</a>
		</div>
		<div>
			<form action="/{{donut._id}}?_method=DELETE" method='POST'>
				<input type="submit" value='Delete'>
			</form>
		</div>


	

	</div>

