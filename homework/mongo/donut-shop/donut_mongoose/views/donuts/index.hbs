<main>
	<h2>Handmade, Fresh, Daily!</h2>

	{{#each donuts}}

	<div class="donut-container">

		<img class="main-img" src="{{this.img}}" alt="">

		<h3> <a href="/{{this._id}}">{{this.name}}</a> </h3>

		<p>$ {{this.price}} each </p>

	</div>

	{{/each}}

	<div>
		<h2> <a href="/new">Add a New Donut</a></h2>
	</div>


</main>